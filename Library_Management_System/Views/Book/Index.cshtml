@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Book List</h2>
        </div>
      @*  <div class="col-6 text-end">
            <a asp-controller="BOok" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; create new category
            </a>
        </div>*@
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Book Name
                </th>
                <th>
                    Book Author
                </th>
                <th>
                    Edition
                </th>
                <th>
                    Publisher Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td with="25%">
                    @obj.BookName
                </td>
                <td with="25%">
                    @obj.Author
                </td>
                <td with="25%">
                    @obj.Edition
                </td>
                <td with="25%">
                    @obj.BookPublishers.PublName
                </td>
               
            </tr>
            }
        </tbody>
    </table>
</div>
