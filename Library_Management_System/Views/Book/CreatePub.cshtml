@model BookPublisher

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Book</h2>

            <hr />
        </div>
        @*<div asp-validation-summary ="All"></div>*@
        <div class=mb-3>
            <label asp-for="PublName"></label>
            <input asp-for="PublName" class="form-control" />
            <span asp-validation-for="PublName" class="text-danger"></span>
        </div>
        <div class=mb-3>
            <label asp-for="PubAdd"></label>
            <input asp-for="PubAdd" class="form-control" />
            <span asp-validation-for="PubAdd" class="text-danger"></span>
        </div>
        <div class=mb-3>
            <label asp-for="PubContact"></label>
            <input asp-for="PubContact" class="form-control" />
            <span asp-validation-for="PubContact" class="text-danger"></span>
        </div>
      
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Book" asp-action="Index" class="btn alert-secondary" style="width:150px"> Back to List </a>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}