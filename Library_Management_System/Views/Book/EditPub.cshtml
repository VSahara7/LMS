@model BookPublisher

<form method="post" asp-action="EditPub">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Book</h2>
            <hr />
        </div>
        <input asp-for="PublisherId" type="hidden" class="form-control" />
        <div class=mb-3>
            <label asp-for=PublName></label>
            <input asp-for="PublName" class="form-control" />
            <span asp-validation-for="PublName" class="text-danger"></span>
        </div>
        <div class=mb-3>
            <label asp-for=PubAdd></label>
            <input asp-for="PubAdd" class="form-control" />
            <span asp-validation-for="PubAdd" class="text-danger"></span>
        </div>
        <div class=mb-3>
            <label asp-for=PubContact></label>
            <input asp-for="PubContact" class="form-control" />
            <span asp-validation-for="PubContact" class="text-danger"></span>
        </div>
     
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Book" asp-action="IndexPub" class="btn alert-secondary" style="width:150px"> Back to List </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
